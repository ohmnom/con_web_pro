  <build>
    <finalName>ConWebPro</finalName>
    
    <plugins>
    <plugin>
    <groupId>org.apache.tomcat.maven</groupId>
    <artifactId>tomcat7-maven-plugin</artifactId>
    <version>2.1</version>
    <configuration>
    <url>http://localhost:8080/nucleus</url>
	<server>mytomcat</server>
    <path>/nucleus</path>
    </configuration>
    </plugin>
    </plugins>
    
  </build>
